<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.peter.fragmentstest.CalculateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ratio = dpi / 160"
        android:textColor="@color/BlueViolet" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dp = px / ratio"
        android:textColor="@color/BlueViolet" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="status height" />

    <TextView
        android:id="@+id/tvStatusBar"
        style="@style/TxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="screen width*height" />

    <TextView
        android:id="@+id/tvWH"
        style="@style/TxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="real width*height" />

    <TextView
        android:id="@+id/tvRealWH"
        style="@style/TxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dpi" />

    <TextView
        android:id="@+id/tvDpi"
        style="@style/TxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ratio" />

    <TextView
        android:id="@+id/tvRatio"
        style="@style/TxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="width*height with dp" />

    <TextView
        android:id="@+id/tvWHdp"
        style="@style/TxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="real width*height with dp" />

    <TextView
        android:id="@+id/tvRealWHdp"
        style="@style/TxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

